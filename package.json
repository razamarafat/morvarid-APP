  "version": "4.3.63",
  "homepage": "https://razamarafat.github.io/morvarid-APP",
  "type": "module",
  "scripts": {
    "predev": "node scripts/check-env.js",
    "dev": "vite",
    "prebuild": "node scripts/check-env.js",
    "build": "tsc && vite build",
    "build:github": "cross-env DEPLOY_TARGET=github npm run build",
    "build:cloudflare": "cross-env DEPLOY_TARGET=cloudflare npm run build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "deploy:github": "npm run build:github && gh-pages -d dist",
    "deploy:cloudflare": "npm run build:cloudflare"
  },
  "dependencies": {
