    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^7.3.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.18.0",
    "@rollup/rollup-linux-x64-musl": "^4.18.0"
  }
