    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "react-virtualized-auto-sizer": "^1.0.24",
    "react-window": "^1.8.10",
    "uuid": "^9.0.1",
    "workbox-background-sync": "^7.4.0",
    "workbox-expiration": "^7.4.0",
    "workbox-precaching": "^7.4.0",
    "workbox-routing": "^7.4.0",
